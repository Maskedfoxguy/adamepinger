{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["server/**/*.js"],
      "env": {
        "node": true,
        "jest": true
      }
    },
    {
      "files": ["client/src/**/*.{js,jsx}"],
      "env": {
        "browser": true,
        "es2021": true,
        "jest": true
      },
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      }
    }
  ]
}
